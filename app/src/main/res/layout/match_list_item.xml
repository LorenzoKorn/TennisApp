<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:background="@drawable/table_cell"
    android:orientation="vertical">

    <!-- HOME -->
    <LinearLayout
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/padding_from_edges"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player_home_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell" />

            <TextView
                android:id="@+id/player_home_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell" />
        </LinearLayout>

        <TextView
            android:id="@+id/set_home_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_cell"
            android:gravity="center"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/set_home_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_cell"
            android:gravity="center"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/set_home_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_cell"
            android:gravity="center"
            tools:ignore="LabelFor" />

    </LinearLayout>

    <!-- CHALLENGERS -->
    <LinearLayout
        android:id="@+id/challengers"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/padding_from_edges"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/challenger_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell" />

            <TextView
                android:id="@+id/challenger_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_cell" />
        </LinearLayout>

        <TextView
            android:id="@+id/set_out_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_cell"
            android:gravity="center"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/set_out_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_cell"
            android:gravity="center"
            tools:ignore="LabelFor" />

        <TextView
            android:id="@+id/set_out_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/table_cell"
            android:gravity="center"
            tools:ignore="LabelFor" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>